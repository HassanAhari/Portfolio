---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@fontsource/ceviche-one';
import '../base.css'
---

<!doctype html>
<html lang="en" class="bg-natural text-content">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="My complete portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<script>
import AOS from 'aos';
import 'aos/dist/aos.css';
AOS.init({
	duration: 1000,
});
</script>